<div {{ attributes }}>
	<form class="mb-3" data-action="live#action:prevent" data-live-action-param="saveSource">
		<div class="mb-3">
			<label for="source-name">Source name:</label>
			<input type="text" data-model="name" class="form-control {{ _errors.has('name') ? 'is-invalid' }}" id="source-name">
			{% if _errors.has('name') %}
				<div class="invalid-feedback">
					{{ _errors.get('name') }}
				</div>
			{% endif %}
		</div>
		<div class="mb-3">
			<label for="source-url">Source URL:</label>
			<input type="text" data-model="url" class="form-control {{ _errors.has('url') ? 'is-invalid' }}" id="source-url">
			{% if _errors.has('url') %}
				<div class="invalid-feedback">
					{{ _errors.get('url') }}
				</div>
			{% endif %}
		</div>

		<button type="submit" id="testing-element" class="btn btn-primary">Save</button>
	</form>
</div>