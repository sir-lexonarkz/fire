<div data-controller="symfony--ux-swup--swup" id="swup" data-turbo="false">
	<div class="row">
		{{ include('article/_list.html.twig') }}
	</div>
	{% if pages > 1 %}
		<div class="mt-3">
			<nav class="Pagination">
				<ul class="pagination justify-content-center">
					{% for num in 1..pages %}
						<li class="page-item {{ page == num ? 'active' }}">
							<a class="page-link" href="{{ path('app_index', num > 1 ? {page: num} : {}) }}" aria-current="{{ page == num ? 'true' : 'false' }}">
								{{ num }}
							</a>
						</li>
					{% endfor %}
				</ul>
			</nav>
		</div>
	{% endif %}
</div>
